<Window x:Class="WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="Club Management System" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2E75B6" Padding="20,15">
            <TextBlock Text="Club Management System" FontSize="24" FontWeight="Bold" Foreground="White"/>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" Text="Welcome to the Club Management System" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,20"/>
            
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Member Management Card -->
                <Border Grid.Column="0" BorderBrush="#2E75B6" BorderThickness="1" Margin="0,0,10,0" CornerRadius="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Border Grid.Row="0" Background="#2E75B6" Padding="10">
                            <TextBlock Text="Member Management" FontSize="16" FontWeight="Bold" Foreground="White"/>
                        </Border>
                        
                        <StackPanel Grid.Row="1" Margin="15">
                            <TextBlock Text="Manage club members:" TextWrapping="Wrap" Margin="0,0,0,10"/>
                            <TextBlock Text="• Add new members" Margin="10,0,0,5"/>
                            <TextBlock Text="• Edit member information" Margin="10,0,0,5"/>
                            <TextBlock Text="• View member activities" Margin="10,0,0,5"/>
                            <TextBlock Text="• Search and filter members" Margin="10,0,0,5"/>
                        </StackPanel>
                        
                        <Button Grid.Row="2" Content="Open Member Management" Margin="15" Padding="10" Click="btnMemberManagement_Click" Height="38"/>
                    </Grid>
                </Border>
                
                <!-- Event Management Card -->
                <Border Grid.Column="1" BorderBrush="#2E75B6" BorderThickness="1" Margin="10,0,0,0" CornerRadius="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Border Grid.Row="0" Background="#2E75B6" Padding="10">
                            <TextBlock Text="Event Management" FontSize="16" FontWeight="Bold" Foreground="White"/>
                        </Border>
                        
                        <StackPanel Grid.Row="1" Margin="15">
                            <TextBlock Text="Manage club events:" TextWrapping="Wrap" Margin="0,0,0,10"/>
                            <TextBlock Text="• Create new events" Margin="10,0,0,5"/>
                            <TextBlock Text="• Track event participation" Margin="10,0,0,5"/>
                            <TextBlock Text="• Send notifications" Margin="10,0,0,5"/>
                            <TextBlock Text="• Manage event status" Margin="10,0,0,5"/>
                        </StackPanel>

                        <Button Grid.Row="2" Content="Open Event Management" Margin="15" Padding="10" Click="btnEventManagement_Click" Height="38"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#F0F0F0" Padding="20,10">
            <TextBlock Text=" 2025 Club Management System" HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
