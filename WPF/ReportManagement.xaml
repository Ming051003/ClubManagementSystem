<Window x:Class="WPF.ReportManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="ReportManagement" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Quản lý Báo Cáo" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>
        <DataGrid ItemsSource="{Binding Reports}" SelectedItem="{Binding SelectedReport}" AutoGenerateColumns="False" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Học kỳ" Binding="{Binding Semester}" Width="150"/>
                <DataGridTextColumn Header="Thay đổi thành viên" Binding="{Binding MemberChanges}" Width="250"/>
                <DataGridTextColumn Header="Tóm tắt sự kiện" Binding="{Binding EventSummary}" Width="250"/>
                <DataGridTextColumn Header="Thống kê tham gia" Binding="{Binding ParticipationStats}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
