<Window x:Class="WPF.ClubManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="ClubManagement" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Quản lý Câu Lạc Bộ" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>
        <DataGrid ItemsSource="{Binding Clubs}" SelectedItem="{Binding SelectedClub}" AutoGenerateColumns="False" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Tên Câu Lạc Bộ" Binding="{Binding ClubName}" Width="*"/>
                <DataGridTextColumn Header="Mô tả" Binding="{Binding Description}" Width="200"/>
                <DataGridTextColumn Header="Ngày Thành Lập" Binding="{Binding EstablishedDate}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Thêm" Command="{Binding AddClubCommand}" Width="120" Margin="5"/>
            <Button Content="Sửa" Command="{Binding EditClubCommand}" Width="120" Margin="5"/>
            <Button Content="Xóa" Command="{Binding DeleteClubCommand}" Width="120" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
