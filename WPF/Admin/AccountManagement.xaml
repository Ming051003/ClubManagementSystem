<UserControl x:Class="WPF.Admin.AccountManagement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
            xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:local="clr-namespace:WPF.Admin"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"  Grid.ColumnSpan="2" Text="Event Management" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>
        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.8*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Search Panel -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,0,0,0" >
                <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="tbSearch"  Width="250" Height="30" Margin="0,0,10,10"/>
                <Button Content="Search"  Width="80"/>
            </StackPanel>
            
            <!-- Account DataGrid -->
            <DataGrid Grid.Row="1" x:Name="dgAccount" AutoGenerateColumns="False" 
                    IsReadOnly="True" Margin="5,0,10,0" SelectionChanged="dgAccount_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Roll Number" Binding="{Binding StudentId}" Width="auto"/>
                    <DataGridTextColumn Header="User Name" Binding="{Binding UserName}" Width="auto"/>
                    <DataGridTextColumn Header="Password" Binding="{Binding Password}" Width="auto"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="auto"/>
                    <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="auto"/>
                    <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="auto"/>
                    <DataGridTextColumn Header="Club Name" Binding="{Binding ClubName}" Width="auto"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="auto"/>
                </DataGrid.Columns>
            </DataGrid>
            
            <!-- Action Buttons -->
            <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center" >
                <Button Content="Add Account"  Width="150" Margin="5"/>
                <Button Content="Edit Account"  Width="150" Margin="5"/>
                <Button Content="Delete Account"  Width="150" Margin="5"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="1">
           
            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!--Column 1-->
            <TextBlock Text="Roll Number" Grid.Row="0"  VerticalAlignment="Center"/>
            <TextBox x:Name="txtRollNumber"  Grid.Row="1"  Margin="0,5,10,5" Height="30"  IsReadOnly="True" />
            <TextBlock Text="Username" Grid.Row="2"  VerticalAlignment="Center"/>
            <TextBox x:Name="txtUsername" Grid.Row="3"  Margin="0,0,10,0" Height="30" IsReadOnly="True"/>
            <TextBlock Text="Password" Grid.Row="4"  VerticalAlignment="Center"/>
            <TextBox x:Name="txtPassword" Grid.Row="5"  Margin="0,0,10,0" Height="30" IsReadOnly="True"/>
            <!--Column 2-->
            <TextBlock Text="Email" Grid.Row="6"  VerticalAlignment="Center"/>
            <TextBox x:Name="txtEmail" Grid.Row="7"  Margin="0,0,10,0" Height="30" IsReadOnly="True"/>
            <!--Column 3-->
            <TextBlock Text="Full Name" Grid.Row="8"  VerticalAlignment="Center"/>
            <TextBox x:Name="txtFullName" Grid.Row="9"  Margin="0,5,10,5" Height="30" IsReadOnly="True"/>
            <!--Column 4-->
            <TextBlock Text="Role" Grid.Row="10"  VerticalAlignment="Center"/>
            <ComboBox x:Name="cboRole" Grid.Row="11"  Margin="0,0,10,0" Height="30" IsReadOnly="True"
                       IsEditable="False"  DisplayMemberPath="Role" SelectedValuePath="Role" />
            <!--Column 5-->
            <TextBlock Text="Club Name" Grid.Row="12"  VerticalAlignment="Center"/>
            <ComboBox x:Name="cboClub" Grid.Row="13"  Margin="0,0,10,0" Height="30" IsReadOnly="True"
                      DisplayMemberPath="ClubName" SelectedValuePath="ClubId"/>

        </Grid>
    </Grid>
</UserControl>
    
