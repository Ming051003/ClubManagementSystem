<Window x:Class="WPF.MemberManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="Member Management" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Member Management" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>

        <!-- Search Panel -->
        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="txtSearch" Width="200" Margin="0,0,10,0"/>
            <ComboBox x:Name="cmbSearchCriteria" Width="120" Margin="0,0,10,0">
                <ComboBoxItem Content="FullName" IsSelected="True"/>
                <ComboBoxItem Content="StudentID"/>
                <ComboBoxItem Content="Role"/>
            </ComboBox>
            <Button x:Name="btnSearch" Content="Search" Width="80" Click="btnSearch_Click"/>
        </StackPanel>

        <!-- Members DataGrid -->
        <DataGrid x:Name="dgMembers" Grid.Row="2" Grid.Column="0" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  SelectionChanged="dgMembers_SelectionChanged"
                  Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Student ID" Binding="{Binding StudentId}" Width="auto"/>
                <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="auto"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="auto"/>
                <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="auto"/>
                <DataGridTextColumn Header="Join Date" Binding="{Binding JoinDate, StringFormat=d}" Width="auto"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="auto"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="btnAddMember" Content="Add Member" Width="135" Margin="5" Click="btnAddMember_Click"/>
            <Button x:Name="btnEditMember" Content="Edit Member" Width="135" Margin="5" Click="btnEditMember_Click"/>
            <Button x:Name="btnDeleteMember" Content="Delete Member" Width="135" Margin="5" Click="btnDeleteMember_Click"/>
            <Button x:Name="btnViewActivities" Content="View Activities" Width="135" Margin="5" Click="btnViewActivities_Click"/>
        </StackPanel>

        <!-- Member Edit Form -->
        <Border x:Name="borderEditForm" Grid.Row="1" Grid.RowSpan="3" Grid.Column="1" 
                BorderBrush="LightGray" BorderThickness="1" Margin="10" 
                Visibility="Collapsed">
            <StackPanel Margin="10">
                <TextBlock Text="Member Details" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                
                <TextBlock Text="Student ID:"/>
                <TextBox x:Name="txtStudentId" Margin="0,0,0,10"/>
                
                <TextBlock Text="Full Name:"/>
                <TextBox x:Name="txtFullName" Margin="0,0,0,10"/>
                
                <TextBlock Text="Email:"/>
                <TextBox x:Name="txtEmail" Margin="0,0,0,10"/>
                
                <TextBlock Text="Password:"/>
                <PasswordBox x:Name="txtPassword" Margin="0,0,0,10"/>
                
                <TextBlock Text="Role:"/>
                <ComboBox x:Name="cmbRole" Margin="0,0,0,10">
                    <ComboBoxItem Content="Member"/>
                    <ComboBoxItem Content="President"/>
                    <ComboBoxItem Content="Admin"/>
                </ComboBox>
                
                <TextBlock Text="Club ID:"/>
                <TextBox x:Name="txtClubId" Margin="0,0,0,10"/>
                
                <TextBlock Text="Join Date:"/>
                <DatePicker x:Name="dpJoinDate" Margin="0,0,0,10"/>
                
                <TextBlock Text="Status:"/>
                <CheckBox x:Name="chkStatus" Content="Active" Margin="0,0,0,20"/>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="btnSave" Content="Save" Width="80" Margin="0,0,10,0" Click="btnSave_Click"/>
                    <Button x:Name="btnCancel" Content="Cancel" Width="80" Click="btnCancel_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Member Activities -->
        <Border x:Name="borderActivities" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" 
                BorderBrush="LightGray" BorderThickness="1" Margin="10"
                Visibility="Collapsed">
            <StackPanel>
                <TextBlock Text="Member Activities" FontWeight="Bold" FontSize="16" Margin="10"/>
                <TextBlock x:Name="txtNoActivities" Text="No activities found" 
                 HorizontalAlignment="Center" 
                 VerticalAlignment="Center"
                 Margin="10"
                 Visibility="Visible"/>
                <DataGrid x:Name="dgActivities"
                         AutoGenerateColumns="False" 
                         IsReadOnly="True" 
                         Margin="10"
                         Visibility="Collapsed">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Event Name" Binding="{Binding Event.EventName}" Width="200"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                        <DataGridTextColumn Header="Registration Date" Binding="{Binding RegistrationDate, StringFormat=d}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>
    </Grid>
</Window>
